<form id="formPessoalJuridica">
    <div class="row">
        <div class="col-md-4 form-group">
            <label for="esfera">Tipo de Pessoa Jurídica</label>
            <select class="form-control" id="tipoPJ">
                <option value="0">Tipo de Pessoa Jurídica</option>
                <option value="1">Órgão do Executivo Estadual</option>
                <option value="2">Outros Órgão Público</option>
                <option value="3">Instutuições Privadas</option>
            </select>
        </div>
        <div id="selecaoOrgaosExecutivoEstadual" class="col-md-8 form-group" style="display:none">
            <label for="poder">Órgão do Executivo Estadual</label>
            <div class="input-group">
                <select class="form-control" id="orgaosExecutivoEstadual"></select>
                <span class="input-group-btn">
                    <button id="btnIncluirOrgaoExecutivoEstadual" type="button" class="btn btn-info"><i class="fa fa-check" aria-hidden="true"></i></button>
                </span>
            </div><!-- /input-group -->
        </div>
    </div>

    <div id="panelPJ" style="display:none">
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="cnpj">CNPJ</label>
                <input type="text" class="form-control" id="cnpj" />
            </div>
            <div class="col-md-6 form-group">
                <label for="razaosocial">Razão Social</label>
                <input type="text" class="form-control" id="razaosocial" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label for="nomefantasia">Nome Fantasia</label>
                <input type="text" class="form-control" id="nomefantasia" />
            </div>
            <div class="col-md-6 form-group">
                <label for="sigla">Sigla</label>
                <input type="text" class="form-control" id="sigla" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label>Estado</label>
                <select class="form-control campo-uf">
                    <option value="0">Selecione o Estado</option>
                    <option value="ac">Acre</option>
                    <option value="al">Alagoas</option>
                    <option value="ap">Amapá</option>
                    <option value="am">Amazonas</option>
                    <option value="ba">Bahia</option>
                    <option value="ce">Ceará</option>
                    <option value="df">Distrito Federal</option>
                    <option value="es">Espirito Santo</option>
                    <option value="go">Goiás</option>
                    <option value="ma">Maranhão</option>
                    <option value="ms">Mato Grosso do Sul</option>
                    <option value="mt">Mato Grosso</option>
                    <option value="mg">Minas Gerais</option>
                    <option value="pa">Pará</option>
                    <option value="pb">Paraíba</option>
                    <option value="pr">Paraná</option>
                    <option value="pe">Pernambuco</option>
                    <option value="pi">Piauí</option>
                    <option value="rj">Rio de Janeiro</option>
                    <option value="rn">Rio Grande do Norte</option>
                    <option value="rs">Rio Grande do Sul</option>
                    <option value="ro">Rondônia</option>
                    <option value="rr">Roraima</option>
                    <option value="sc">Santa Catarina</option>
                    <option value="sp">São Paulo</option>
                    <option value="se">Sergipe</option>
                    <option value="to">Tocantins</option>
                </select>
            </div>
            <div class="col-md-6 form-group">
                <label>Muicípio</label>
                <select class="form-control campo-municipio">
                    <option value="0">Selecione o Município</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label for="esfera">Esfera</label>
                <select class="form-control" id="esfera">
                    <option>Estadual</option>
                    <option>Federal</option>
                    <option>Municipal</option>
                </select>
            </div>
            <div class="col-md-6 form-group">
                <label for="poder">Poder</label>
                <select class="form-control" id="poder">
                    <option>Executivo</option>
                    <option>Judiciário</option>
                    <option>Legislativo</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 form-group">
                <label for="contato">Contatos</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-phone" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" id="contatoPJ" />
                    <span class="input-group-btn">
                        <button id="btnIncluirContatoPJ" type="button" class="btn btn-info"><i class="fa fa-check" aria-hidden="true"></i> Incluir</button>
                    </span>
                </div><!-- /input-group -->
            </div>
            <div class="col-md-12 form-group">
                <div id="ListaContatosPJ" class="dataTables_wrapper form-inline dt-bootstrap">
                    <table id="tabelaListaContatosPJ" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="ListaContatosPJ">
                        <thead>
                            <tr role="row">
                                <th class="col-md-10">Contato</th>
                                <th class="colunaExcluir">Excluir</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 form-group">
                <label for="email">E-mail's</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" id="emailPJ" />
                    <span class="input-group-btn">
                        <button id="btnIncluirEmailPJ" type="button" class="btn btn-info"><i class="fa fa-check" aria-hidden="true"></i> Incluir</button>
                    </span>
                </div><!-- /input-group -->
            </div>
            <div class="col-md-12 form-group">
                <div id="ListaEmailsPJ" class="dataTables_wrapper form-inline dt-bootstrap">
                    <table id="tabelaListaEmailsPJ" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="ListaEmailsPJ">
                        <thead>
                            <tr role="row">                                
                                <th class="col-md-10">E-mail</th>
                                <th class="colunaExcluir">Excluir</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 form-group">
                <label for="site">Site</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-home" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" id="sitePJ" />
                    <span class="input-group-btn">
                        <button id="btnIncluirSitePJ" type="button" class="btn btn-info"><i class="fa fa-check" aria-hidden="true"></i> Incluir</button>
                    </span>
                </div><!-- /input-group -->
            </div>
            <div class="col-md-12 form-group">
                <div id="ListaSitesPJ" class="dataTables_wrapper form-inline dt-bootstrap">
                    <table id="tabelaListaSitesPJ" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="ListaSitesPJ">
                        <thead>
                            <tr role="row">
                                <th class="col-md-10">Site</th>
                                <th class="colunaExcluir">Excluir</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>